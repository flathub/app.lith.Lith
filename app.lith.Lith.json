{
    "id": "app.lith.Lith",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "command": "Lith",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=com.canonical.indicator.application",
        "--talk-name=org.ayatana.indicator.application",
        "--talk-name=org.freedesktop.secrets"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/debug/source",
        "/mkspecs",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "qcoro",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_CXX_FLAGS=-fPIC"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/danvratil/qcoro",
                    "tag": "v0.10.0",
                    "commit": "fa5bc4296a252ad71c85209b60675bb025024a1e",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "config-opts": [
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Dbash_completion=disabled",
                "-Dmanpage=false",
                "-Dintrospection=false",
                "-Dgcrypt=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/GNOME/libsecret",
                    "tag": "0.21.4",
                    "commit": "6b5a6c28afc6dd93c232a4907a87c881079ff91b",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_WITH_QT6=ON",
                "-DUSE_CREDENTIAL_STORE=ON",
                "-DBUILD_SHARED_LIBS=OFF",
                "-DBUILD_TRANSLATIONS=OFF",
                "-DCMAKE_CXX_FLAGS=-fPIC"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/frankosterfeld/qtkeychain",
                    "tag": "0.14.2",
                    "commit": "8eac9889775ca45c106d077bb0d3744754a1570a",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "Lith",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/LithApp/Lith",
                    "tag": "v1.6.2",
                    "commit": "a1e33a8124c96d891c23a1261c68f891ea4d9eef",
                    "x-checker-data": {
                        "is-main-source": true,
                        "type": "git",
                        "tag-pattern": "^v([\\d]+[.][\\d.]*[02468][.][\\d]+)$"
                    }
                }
            ]
        }
    ]
}
